extends layout

block content
  h1= title
  p Rows: #{query.rows}, Columns: #{query.cols}
    - var rows=Number(query.rows);
    - var cols=Number(query.cols);
    if (!Number.isInteger(rows)||!Number.isInteger(cols))
        p Invalid input. Please provide integer values for rows and columns within the range of 3-13.
    else if rows<3||rows>13
        p Invalid input. Please provide integer values for rows within the range of 3-13.
    else if cols<3||cols>13
        p Invalid input. Please provide integer values for  columns within the range of 3-13.
    else
        table#outer
          - for(let i=0; i<rows; i++) {
              tr#middle
                - for(let j=0; j<cols; j++) {
                    td(style="padding: 7px;")= Math.min(i + 1, j + 1)
                -}
          - }